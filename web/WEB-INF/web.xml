<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>IntroductionServlet</servlet-name>
        <servlet-class>cn.dreamplume.servlet.IntroductionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IntroductionServlet</servlet-name>
        <url-pattern>/introduction</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ExampleServlet</servlet-name>
        <servlet-class>cn.dreamplume.servlet.ExampleServelt</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ExampleServlet</servlet-name>
        <url-pattern>/example</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ExampleServlet2</servlet-name>
        <servlet-class>cn.dreamplume.servlet.ExampleServlet2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ExampleServlet2</servlet-name>
        <url-pattern>/example2</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FormVerification</servlet-name>
        <servlet-class>cn.dreamplume.servlet.FormVerification</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FormVerification</servlet-name>
        <url-pattern>/formVerification</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ServletContext</servlet-name>
        <servlet-class>cn.dreamplume.servlet.ServletContextTest</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletContext</servlet-name>
        <url-pattern>/servletContext</url-pattern>
    </servlet-mapping>
    <!--  ServletContext 对象在获取初始化的数据的数据对象  -->
    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:mysql://localhost:3306/formdata</param-value>
    </context-param>

    <servlet>
        <servlet-name>Header</servlet-name>
        <servlet-class>cn.dreamplume.response.Header</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Header</servlet-name>
        <url-pattern>/header</url-pattern>
    </servlet-mapping>
</web-app>