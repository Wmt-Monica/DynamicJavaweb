    <!--  对实现 Filter 测试类对象进行注册  -->
    <filter>
        <filter-name>FilterExample01</filter-name>
        <filter-class>cn.dreamplume.filter.FilterExample01</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterExample01</filter-name>
        <!--   目的资源的匹配有三种：1.完全匹配 2.目录匹配 3.后缀名匹配（后缀名匹配*前面不能加其他内容是错误写法 例如：*.jsp）-->
        <!-- 除了使用url-pattern 以外，还可以使用 servlet-name 输入服务器的名称来指定目的资源 -->
        <url-pattern>/filterIntroductionServlet</url-pattern>  <!-- 写入目的资源的 url 路径 -->
    </filter-mapping>

    <filter>
        <filter-name>FilterExample02</filter-name>
        <filter-class>cn.dreamplume.filter.FilterExample02</filter-class>
        <init-param>
            <param-name>name</param-name>
            <param-value>石燔傻瓜</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>FilterExample02</filter-name>
        <url-pattern>/filterIntroductionServlet</url-pattern>  <!-- 写入目的资源的 url 路径 -->
    </filter-mapping>

    <filter>
        <filter-name>FilterWay</filter-name>
        <filter-class>cn.dreamplume.filter.FilterWay</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterWay</filter-name>
        <url-pattern>/FilterTest.jsp</url-pattern>
        <!--
            访问方式 ：
                1.REQUEST(request)：默认值，代表直接访问某个资源时执行 filter
                2.FORWARD(forward)：转法时才执行 filter
                3.INCLUDE(include)：包含资源才执行
                4.ERROR(error)：发生错误时进行跳转时执行 filter
        -->
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

